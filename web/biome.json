{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
	"formatter": {
		"indentStyle": "space",
		"lineWidth": 100
	},
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "json": {
    "formatter": {
      "enabled": false
    }
  },
	"linter": {
		"enabled": true
	},
	"organizeImports": {
		"enabled": true
	}
}
